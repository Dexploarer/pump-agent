{
  "name": "pump-agent",
  "version": "1.0.0",
  "type": "module",
  "description": "Real-time cryptocurrency data collection and AI query platform for pump.fun tokens",
  "main": "dist/main.js",
  "scripts": {
    "dev": "bun --watch src/main.ts",
    "dev:mock": "bun --watch src/main-dev.ts",
    "build": "bun build src/main.ts --outdir dist --target node",
    "start": "node dist/main.js",
    "start:prod": "node dist/main.js",
    "start:dev": "bash scripts/start.sh",
    "stop": "bash scripts/stop.sh",
    "restart": "bash scripts/restart.sh",
    "status": "bash scripts/status.sh",
    "logs": "tail -f logs/pump-agent.log",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "type-check": "bun run tsc --noEmit",
    "clean": "rm -rf dist coverage",
    "deploy-check": "bun scripts/deployment-check.js",
    "test-local": "bun scripts/test-local.js"
  },
  "keywords": [
    "cryptocurrency",
    "pump.fun",
    "mcp",
    "influxdb",
    "websocket"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@influxdata/influxdb-client": "^1.33.2",
    "@influxdata/influxdb-client-apis": "^1.33.2",
    "@modelcontextprotocol/sdk": "^0.4.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "open": "^10.2.0",
    "socket.io": "^4.7.2",
    "winston": "^3.17.0",
    "ws": "^8.14.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.14.0",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.4.0"
  }
}
